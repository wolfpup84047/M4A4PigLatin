<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import java.lang.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.layout.AnchorPane?>


<AnchorPane prefHeight="215.0" prefWidth="599.0" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/8" fx:controller="PigLatinController">
   <children>
      <MenuBar prefHeight="29.0" prefWidth="599.0">
        <menus>
          <Menu mnemonicParsing="false" text="File">
            <items>
              <MenuItem fx:id="menuClose" mnemonicParsing="false" onAction="#close" text="Close" />
            </items>
          </Menu>
          <Menu mnemonicParsing="false" text="Help">
            <items>
              <MenuItem fx:id="menuAbout" mnemonicParsing="false" onAction="#about" text="About" />
            </items>
          </Menu>
        </menus>
      </MenuBar>
      <Label layoutX="14.0" layoutY="40.0" text="Input Text to Translate:" />
      <TextField fx:id="txtInput" layoutX="14.0" layoutY="57.0" prefHeight="27.0" prefWidth="574.0" />
      <Button fx:id="btnTranslate" layoutX="14.0" layoutY="100.0" mnemonicParsing="false" onAction="#translate" text="Translate to Pig Latin" />
      <TextField fx:id="txtOutput" editable="false" layoutX="14.0" layoutY="162.0" prefHeight="27.0" prefWidth="574.0" />
      <Label layoutX="14.0" layoutY="145.0" text="Translated Text:" />
      <Button fx:id="btnClear" layoutX="183.0" layoutY="100.0" mnemonicParsing="false" onAction="#clear" text="Clear Text Boxes" />
   </children>
</AnchorPane>
